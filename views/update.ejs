<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <%- include('partials/head') %>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
</head>

<body>

<%- include('partials/navbar') %>

<div class="container">
    <br>
    <h3 class="text-center">Manage Library Books</h3>
    <br>
    <div class="col-md-6 mx-auto contain">
        <form action="updateQuantity" method="post" encType="multipart/form-data">
            <br>
            <label class="form-label"><b>Update Book Quantity</b></label>
            <br><br>
            <div class="row">
                <label class="form-label">Book ID: </label>
                <input type="text" class="form-control" name="id" value="<%=id%>" required="true" readonly>
            </div>
            <br>
            <div class="row">
                <label class="form-label">Total Issue: </label>
                <input type="text" class="form-control" name="ti" value="<%=ti%>" required="true" >
            </div>
            <br>
            <div class="row">
                <label class="form-label">Total Read: </label>
                <input type="text" class="form-control" name="tr" value="<%=tr%>" required="true">
            </div>
            <br>
            <div class="row">
                <label class="form-label">Available:</label>
                <input type="text" class="form-control" name="avl" value="<%=avl%>" required="true">
            </div>
            <br>
            <p>Enter user details carefully.</p>
            <br>
            <button type="submit" class="btn btn-success">Update Quantity</button>
        </form>
        <br>
    </div>

    <!--    FORM-->
</div>

<%- include('partials/footer') %>


</body>

</html>

