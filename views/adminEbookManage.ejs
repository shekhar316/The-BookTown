<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <%- include('partials/head') %>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
</head>

<body>

<%- include('partials/navbar') %>

<div class="container">
    <br>
    <h3 class="text-center">Manage Free E-Books</h3>
    <br>
    <a href="/admin/fzone/add" class="btn btn-success">Add Book to Free Zone</a>
    <br><br>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
        <tr class="table-dark">
            <th>Book</th>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>Publication Year</th>
            <th>Edition</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        <% if(ebookData.length!=0){ var i = 1; ebookData.forEach(function(data){ %>
        <tr>
            <td>
                <img src="/ebookImg/<%=data.identifier %>.jpg" class="bookImgThumb" alt="book-image"/>
            </td>
            <td>
                <%=data.ebookID %>
            </td>
            <td>
                <a href="/ebook/viewbyid/<%=data.ebookID %>"><%=data.Title %></a>
            </td>
            <td>
                <%=data.Author %>
            </td>
            <td>
                <%=data.Publisher %>
            </td>
            <td>
                <%=data.PublicationYear %>
            </td>
            <td>
                <%=data.Edition %>
            </td>
            <td>
                <a class="btn-sm btn-danger" href="/admin/fzone/delete/<%=data.ebookID %>">Delete</a>
            </td>
        </tr>
        <% i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="100%">No Data Found</td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>

<%- include('partials/footer') %>


</body>

</html>